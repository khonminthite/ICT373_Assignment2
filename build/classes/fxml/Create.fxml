<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import controller.CreateController?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controller.CreateController" spacing="5">
    <children>
        <HBox spacing="30" alignment="CENTER" style="-fx-padding: 10 10;">
            <Button fx:id="viewButton" text="View" onAction="#viewAction"/>
            <Button fx:id="editButton" text="Edit" onAction="#editAction"/>
            <Button fx:id="createButton" text="Create" onAction="#createAction"/>
        </HBox>
        <VBox spacing="10" alignment="CENTER">
            <Label text="Create or Load Magazine" style="-fx-font-weight: bold; "/>
            <Button fx:id="createMagazineButton" text="Create Magazine" onAction="#createMagazineAction"/>
            <Button fx:id="loadMagazineButton" text="Load Magazine" onAction="#loadMagazineAction"/>
            <Label fx:id="saveFileName" text=""/>
        </VBox>
    </children>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controller.edit.EditMagazineController" spacing="10">
    <children>
        <Label text="Edit Magazine" style="-fx-font-weight: bold; -fx-font-size: 18px; -fx-padding: 5 110;"/>
        <HBox spacing="10" style="-fx-padding: 5 10;">
            <HBox spacing="2">
                <Label text="Magazine Weekly Cost: "/>
                <Label text="*" style="-fx-text-fill: red;"/>
            </HBox>
            <TextField fx:id="magazineCost" promptText="Enter cost here"/>
            <Label fx:id="costError" text="" style="-fx-text-fill: red;"/>
        </HBox>
        
        <HBox spacing="10" style="-fx-padding: 5 10;">
            <Button fx:id="cancelButton" text="Cancel" onAction="#cancelAction"/>
             <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="saveButton" text="Save" onAction="#saveAction"/>
        </HBox>
    </children>
</VBox>
